<%= form_for(@staff) do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation" class="alert-message block-message error">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% @staff.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
		<div class="input">
    <%= f.text_field :name %>
		<span class="help-inline">Name is required</span>
		</div>
  </div>
  <div class="clearfix">
    <%= f.label :dept %>
		<div class="input">
    <%= f.text_field :dept %>
		</div>
  </div>
  <div class="clearfix">
    <%= f.label :phone %>
		<div class="input">
    <%= f.text_field :phone %>
		</div>
  </div>
  <div class="clearfix">
    <%= f.label :email %>
		<div class="input">
    <%= f.text_field :email %>
		</div>
  </div>
  <div class="actions">
		<%= f.submit :class => "btn primary" %>
		<%= link_to 'Back', staffs_path, :class => "btn" %>
  </div>
<% end %>
